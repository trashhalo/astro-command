---
import { exec } from 'node:child_process';
import { fileURLToPath } from 'node:url';
import path from 'node:path';

const {
    caller,
    command,
    sendProps = true,
    args
} = Astro.props;

const input = JSON.stringify(Astro.props);
const cwd = path.join(fileURLToPath(caller), '../');

let commandWithArgs = command;
if(args) {
    commandWithArgs += ' ' + args.join(' ');
}

console.log(cwd, commandWithArgs);
const html = await new Promise((resolve, reject) => {
    const sub = exec(commandWithArgs, { cwd }, (err, stdout, stderr) => {
        if(err) {
            return reject({err, stderr});
        }
        resolve(stdout);
    });
    if(sendProps) {
        sub.on('spawn', () => {
            if(sub.stdin.writable) {
                sub.stdin.write(input);
                sub.stdin.end();
            }
        });
    }
});
---
{html}
